{
  "$id": "http://n3sdu.github.io/r/schema/common.schema.json",
  "definitions": {
    "vendorProps": {
      "pattern": "^_vnd_\\w+_.*$"
    },
    "fieldRef": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string"
        },
        "set": {
          "type": "string"
        }
      },
      "required": [
        "field"
      ],
      "propertyNames": {
        "anyOf": [
          {
            "enum": [
              "field",
              "set"
            ]
          },
          {
            "$ref": "#/definitions/vendorProps"
          }
        ]
      }
    }
  }
}
