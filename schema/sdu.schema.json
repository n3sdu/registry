{
  "$id": "http://n3sdu.github.io/r/schema/sdu.schema.json",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "patternProperties": {
        "^[^_].*$": {
          "$ref": "#/definitions/fieldSet"
        }
      },
      "propertyNames": {
        "anyOf": [
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          },
          {
            "pattern": "^[^_].*$"
          }
        ]
      }
    },
    "functional": {
      "type": "object",
      "patternProperties": {
        "^_(?!vnd_).*$": {
          "$ref": "#/definitions/functionalInstance"
        }
      },
      "propertyNames": {
        "anyOf": [
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          },
          {
            "pattern": "^_(?!vnd_).*$"
          }
        ]
      }
    },
    "validation": {
      "$ref": "#/definitions/predicateOrNull"
    },
    "plausibility": {
      "$ref": "#/definitions/predicateOrNull"
    },
    "visualisation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "caption": {
            "type": "string"
          },
          "display": {
            "oneOf": [
              {
                "$ref": "table.vis.schema.json#"
              }
            ]
          }
        },
        "propertyNames": {
          "anyOf": [
            {
              "enum": [
                "caption",
                "display"
              ]
            },
            {
              "$ref": "common.schema.json#/definitions/vendorProps"
            }
          ]
        }
      }
    }
  },
  "propertyNames": {
    "anyOf": [
      {
        "$ref": "common.schema.json#/definitions/vendorProps"
      },
      {
        "enum": [
          "input",
          "functional",
          "validation",
          "plausibility",
          "visualisation"
        ]
      }
    ]
  },
  "definitions": {
    "fieldSet": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": ".+"
      }
    },
    "fieldRef": {
      "$ref": "common.schema.json#/definitions/fieldRef"
    },
    "functionalInstance": {
      "type": "object",
      "properties": {
        "contract": {
          "type": "string"
        },
        "instance": {
          "type": "string"
        },
        "output": {
          "$ref": "#/definitions/fieldSet"
        },
        "extends": {
          "type": "string"
        },
        "binding": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/fieldRef"
          }
        },
        "priority": {
          "type": "number"
        },
        "config": true
      },
      "required": [
        "contract",
        "output",
        "binding"
      ],
      "propertyNames": {
        "anyOf": [
          {
            "enum": [
              "contract",
              "instance",
              "output",
              "extends",
              "binding",
              "priority",
              "config"
            ]
          },
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          }
        ]
      }
    },
    "patternPredicate": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "pattern": {
              "type": "string"
            },
            "target": {
              "$ref": "#/definitions/fieldRef"
            }
          },
          "required": [
            "pattern",
            "target"
          ]
        },
        {
          "properties": {
            "notEmpty": {
              "$ref": "#/definitions/fieldRef"
            }
          },
          "required": [
            "notEmpty"
          ]
        },
        {
          "properties": {
            "notBlank": {
              "$ref": "#/definitions/fieldRef"
            }
          },
          "required": [
            "notBlank"
          ]
        },
        {
          "properties": {
            "word": {
              "$ref": "#/definitions/fieldRef"
            }
          },
          "required": [
            "word"
          ]
        },
        {
          "properties": {
            "integer": {
              "$ref": "#/definitions/fieldRef"
            }
          },
          "required": [
            "integer"
          ]
        }
      ],
      "propertyNames": {
        "anyOf": [
          {
            "enum": [
              "pattern",
              "target",
              "notEmpty",
              "notBlank",
              "word",
              "integer"
            ]
          },
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          }
        ]
      }
    },
    "numberPredicate": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "target": {
          "$ref": "#/definitions/fieldRef"
        },
        "relation": {
          "enum": [
            "equal",
            "notEqual",
            "less",
            "lessEqual",
            "greater",
            "greaterEqual"
          ]
        }
      },
      "required": [
        "value",
        "target",
        "relation"
      ],
      "propertyNames": {
        "anyOf": [
          {
            "enum": [
              "value",
              "target",
              "relation"
            ]
          },
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          }
        ]
      }
    },
    "contractPredicate": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "contract": {
          "type": "string"
        },
        "config": true,
        "expected": {
          "type": "string"
        },
        "matchOutput": {
          "type": "string"
        },
        "matchBinding": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/fieldRef"
          }
        },
        "setupBindings": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/definitions/fieldRef"
            }
          }
        }
      },
      "required": [
        "contract",
        "matchOutput",
        "matchBinding"
      ],
      "propertyNames": {
        "anyOf": [
          {
            "enum": [
              "contract",
              "matchOutput",
              "matchBinding",
              "config",
              "expected",
              "setupBindings"
            ]
          },
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          }
        ]
      }
    },
    "notPredicate": {
      "type": "object",
      "properties": {
        "not": {
          "$ref": "#/definitions/predicate"
        }
      },
      "required": [
        "not"
      ],
      "propertyNames": {
        "anyOf": [
          {
            "enum": [
              "not"
            ]
          },
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          }
        ]
      }
    },
    "allPredicate": {
      "type": "object",
      "properties": {
        "all": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/predicate"
          }
        }
      },
      "required": [
        "all"
      ],
      "propertyNames": {
        "anyOf": [
          {
            "enum": [
              "all"
            ]
          },
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          }
        ]
      }
    },
    "anyPredicate": {
      "type": "object",
      "properties": {
        "any": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/predicate"
          }
        }
      },
      "required": [
        "any"
      ],
      "propertyNames": {
        "anyOf": [
          {
            "enum": [
              "any"
            ]
          },
          {
            "$ref": "common.schema.json#/definitions/vendorProps"
          }
        ]
      }
    },
    "predicate": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/patternPredicate"
        },
        {
          "$ref": "#/definitions/numberPredicate"
        },
        {
          "$ref": "#/definitions/contractPredicate"
        },
        {
          "$ref": "#/definitions/notPredicate"
        },
        {
          "$ref": "#/definitions/allPredicate"
        },
        {
          "$ref": "#/definitions/anyPredicate"
        }
      ]
    },
    "predicateOrNull": {
      "oneOf": [
        {
          "$ref": "#/definitions/predicate"
        },
        {
          "type": "null"
        }
      ]
    }
  }
}
